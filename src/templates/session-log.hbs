<!DOCTYPE html>
  <html>
    <head>
      <title>TULL | Session Log</title>
      <style>
        body {
          background-color: #C1CDCD;
        }

        pre {
          margin: 0;
        }

        .container {
          border-radius: 3px;
          background: #222;
          color: #fff;
          overflow: hidden;
          position: relative;
          margin: 100px auto;
          width: 70%;
        }

        .container:before {
          content: ' ';
          display: block;
          height: 48px;
          background: #2F4F4F;
        }
        
        .container:after {
          content: '. . .';
          position: absolute;
          left: 12px;
          right: 0;
          top: -3px;
          font-family: "Times New Roman", Times, serif;
          font-size: 96px;
          color: #fff;
          line-height: 0;
          letter-spacing: -12px;
        }

        .terminal {
          margin: 20px;
          font-family: monospace;
          font-size: 16px;
          color: #22da26;
        }

        .terminal .log {
          white-space: nowrap;
          overflow: hidden;
        }
      </style>
    </head>
    <body>
      <div class="container">
        <div class="terminal">
          {{ #each logs as |log_str| }}
            <div class="log">
              <pre>{{ log_str }}</pre>
            </div>
          {{ /each }}
        </div>
      </div>

      <script>
        (() => {
          setInterval(() => {
            window.location.reload();
          }, 3000);
        })();
      </script>
    </body>
  </html>
